<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.ibratec.projeto_urbantick.gui.MainActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/button_buscar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_cards"
                        android:layout_marginRight="@dimen/margin_cards"
                        android:layout_weight="1"
                        android:onClick="buscarFornecedor"
                        card_view:cardCornerRadius="5dp"
                        card_view:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/height_image_main_screen"
                                android:scaleType="centerCrop"
                                android:src="@drawable/buscar" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/height_button_main_screen"
                                android:gravity="center"
                                android:text="@string/buscar"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_main_screen"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/button_fornecedor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_cards"
                        android:layout_marginLeft="@dimen/margin_cards"
                        android:layout_weight="1"
                        android:onClick="listaFornecedor"
                        card_view:cardCornerRadius="5dp"
                        card_view:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/height_image_main_screen"
                                android:scaleType="centerCrop"
                                android:src="@drawable/fornecedor" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/height_button_main_screen"
                                android:gravity="center"
                                android:text="@string/fornecedor"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_main_screen"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/button_mapa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_cards"
                        android:layout_marginTop="@dimen/margin_cards"
                        android:layout_weight="1"
                        android:onClick="mapaFornecedores"
                        card_view:cardCornerRadius="5dp"
                        card_view:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/gray"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/height_image_main_screen"
                                android:scaleType="centerCrop"
                                android:src="@drawable/mapa" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/height_button_main_screen"
                                android:background="@color/colorPrimary"
                                android:gravity="center"
                                android:text="@string/mapa"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_main_screen"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_cards"
                        android:layout_marginTop="@dimen/margin_cards"
                        android:layout_weight="1"
                        android:onClick="metricas"
                        card_view:cardCornerRadius="5dp"
                        card_view:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/height_image_main_screen"
                                android:scaleType="centerCrop"
                                android:src="@drawable/metricas" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/height_button_main_screen"
                                android:gravity="center"
                                android:text="@string/metricas"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_main_screen"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@id/conteudo"/>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/cabecalho_menu"
        android:fitsSystemWindows="false"
        app:menu="@menu/outros" />
</android.support.v4.widget.DrawerLayout>

